{
  "presets": [
    [
      "env",
      {
        "targets": { "node": 7 },
        "useBuiltIns": true
      }
    ],
    "stage-0",
    "react"
  ],
  "plugins": [
    "add-module-exports",
    "dynamic-import-webpack",
    [
      "module-resolver",
      {
        "root": ["./app"]
      }
    ]
  ],
  "env": {
    "production": {
      "presets": ["react-optimize"],
      "plugins": ["emotion", "babel-plugin-dev-expression"]
    },
    "development": {
      "plugins": [
        ["emotion", { "sourceMap": true }],
        "transform-class-properties",
        "transform-es2015-classes"
      ]
    }
  }
}
